@model List<CRUD_CURSOS.Models.ViewModels.TablaDeCursos>
@{
    ViewBag.Title = "Datos del curso";
}
    <div class="row" style="text-align:right;padding:5px;">
        <a href="~/TablaAlumnos/Nuevo" class="btn btn-primary">Nuevo</a>
    </div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th></th>
            </tr>
            @foreach (var oElemento in Model)
            {
        <tr>
            <td>@oElemento.Nombre_Cursos</td>
            <td>@oElemento.Materias</td>
            <td>@oElemento.Alumnos</td>
            <td>
                <a class="btn btn-default" href="~/TablaAlumnos/Editar/@oElemento.Nombre_Cursos">Editar</a>
                <a class="btn btn-danger" href="~/TablaAlumnos/Eliminar/@oElemento.Nombre_Cursos">Eliminar</a>
            </td>
        </tr>

            }
        </table>
    </div>

</div>

